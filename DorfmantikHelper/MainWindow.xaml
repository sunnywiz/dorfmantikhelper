<Window x:Class="DorfmantikHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DorfmantikHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DockPanel >
            <TextBlock DockPanel.Dock="Top"  TextWrapping="Wrap">Keep track of available spaces here, the hard ones.  Use . for a empty spot. One per line.  Comment after #.  For example, PPWWC.  
                <LineBreak/>
                P)lain W)ood C)ity F)ield R)iver T)rain</TextBlock>
            <TextBox TextWrapping="Wrap" AcceptsReturn="True" Name="AvailableText"/>
        </DockPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <TextBlock>Enter what to search for - enter all 6 sides</TextBlock>
            <TextBox Name="SearchForText" TextChanged="SearchForText_TextChanged"/>
            <TextBlock>Results:</TextBlock>
            <TextBox Name="ResultsText" MinHeight="300"/>
        </StackPanel>
    </Grid>
</Window>
